{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "server/src", // The root folder to resolve relative imports
    "paths": {
      "@models/*": ["models/*"], // Alias for models folder
      "@services/*": ["services/*"] // Alias for services folder
    },
    "skipLibCheck": true, // Skip checking of library files for type errors
    "resolveJsonModule": true, // Allow importing JSON modules
    "strict": true // Enable strict type-checking options
  },
  "include": [
    "server/src/**/*" // Include all files in server/src
  ]
}

